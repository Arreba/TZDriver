<UserControl
    x:Class="TZDriver.Controls.CountdownControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TZDriver.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctrl="using:TZDriver.Models.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">

        <Canvas Width="48"
                Height="48"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <ctrl:RingSlice x:Name="PART_RingSlice"
                             Canvas.Left="-24"
                             Canvas.Top="-24"
                             InnerRadius="38"
                             Radius="48"
                             Fill="{StaticResource AtransBrownLightBrush1}" />
        </Canvas>

        <TextBlock x:Name="PART_Label"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="48"
                   Foreground="{StaticResource AtransBrownLightBrush1}" />
    </Grid>

</UserControl>
