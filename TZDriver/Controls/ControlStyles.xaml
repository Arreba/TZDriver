<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:TZDriver.Controls"
                    xmlns:ctrl="using:TZDriver.Models.Controls"
                    xmlns:backdrop="using:XamlBrewer.Uwp.Controls">

    <x:Double x:Key="ContentDialogMinWidth">300</x:Double>
    <x:Double x:Key="ContentDialogMaxWidth">360</x:Double>
    <x:Double x:Key="ContentDialogMinHeight">250</x:Double>
    <x:Double x:Key="ContentDialogMaxHeight">456</x:Double>
    <x:Double x:Key="ContentDialogButtonMinWidth">0</x:Double>
    <x:Double x:Key="ContentDialogButtonMaxWidth">0</x:Double>
    <x:Double x:Key="ContentDialogButtonHeight">0</x:Double>
    <x:Double x:Key="ContentDialogTitleMaxHeight">40</x:Double>
    <Thickness x:Key="ContentDialogBorderWidth">1</Thickness>
    <Thickness x:Key="ContentDialogButton1HostMargin">0</Thickness>
    <Thickness x:Key="ContentDialogButton2HostMargin">0</Thickness>
    <Thickness x:Key="ContentDialogContentMargin">24,0,24,0</Thickness>
    <Thickness x:Key="ContentDialogContentScrollViewerMargin">0</Thickness>
    <Thickness x:Key="ContentDialogTitleMargin">24,18,24,0</Thickness>

    <!--  Control Styles  -->
    <Style x:Key="PersonIconTextboxControlStyle"
           TargetType="ctrl:TextboxControl">
        <Setter Property="MaxWidth"
                Value="300" />
        <Setter Property="MinWidth"
                Value="100" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="MinHeight"
                Value="20" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="SelectionHighlightColor"
                Value="WhiteSmoke" />
        <Setter Property="BorderThickness"
                Value="0,0,0,1" />
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Setter Property="FontSize"
                Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctrl:TextboxControl">
                    <Grid Width="{TemplateBinding Width}"
                          MaxWidth="{TemplateBinding MaxWidth}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Disabled" />
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Focused" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ExpandStates">
                                <VisualState x:Name="Expand">
                                    <Storyboard>
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="FlipBorder"
                                                         Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationX)"
                                                         From="-90"
                                                         To="0"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="BorderElement"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                         From="1"
                                                         To="0"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                         From="0.8"
                                                         To="1"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                         From="0.8"
                                                         To="1"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         From="0.4"
                                                         To="0.7"
                                                         Duration="0:0:0.25" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Collapse">
                                    <Storyboard>
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="FlipBorder"
                                                         Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationX)"
                                                         From="-1"
                                                         To="-90"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="BorderElement"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.3" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                                         From="1"
                                                         To="0.8"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                                         From="1"
                                                         To="0.8"
                                                         Duration="0:0:0.25" />
                                        <DoubleAnimation BeginTime="0"
                                                         Storyboard.TargetName="IconHeaderPresenter"
                                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                                         From="1"
                                                         To="0.4"
                                                         Duration="0:0:0.25" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ButtonStates">
                                <VisualState x:Name="ButtonVisible" />
                                <VisualState x:Name="ButtonCollapsed" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="FlipBorder"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                MinHeight="35"
                                Background="{StaticResource AtransBrownLightBrush2}"
                                BorderBrush="{StaticResource AtransBrownDarkBrush3}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Projection>
                                <PlaneProjection CenterOfRotationY="1"
                                                 RotationX="-90" />
                            </Border.Projection>
                        </Border>
                        <Border x:Name="BorderElement"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                MinHeight="35"
                                BorderBrush="{StaticResource AtransBrownDarkBrush3}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                RenderTransformOrigin="0.5,1">
                            <Border.RenderTransform>
                                <ScaleTransform />
                            </Border.RenderTransform>
                        </Border>
                        <ContentPresenter x:Name="HeaderContentPresenter"
                                          Grid.ColumnSpan="2"
                                          Margin="2 2 0 0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Header}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          FontFamily="{StaticResource NotJustGroovy}"
                                          FontSize="12"
                                          Opacity="0.8"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource AtransBrownDarkBrush3}"
                                          RenderTransformOrigin="0.5,0.5">
                            <ContentPresenter.RenderTransform>
                                <CompositeTransform />
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                        <ContentPresenter x:Name="IconHeaderPresenter"
                                          Grid.Row="1"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Content="&#xE13D;"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          FontFamily="Segoe UI Symbol"
                                          FontSize="20"
                                          Foreground="{ThemeResource AtransBrownDarkBrush3}"
                                          Opacity="0.8"
                                          RenderTransformOrigin="0.5,0.5"
                                          TextLineBounds="Tight">
                            <ContentPresenter.RenderTransform>
                                <CompositeTransform ScaleX="0.8"
                                                    ScaleY="0.8" />
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                        <ScrollViewer x:Name="ContentElement"
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Height="{TemplateBinding MinHeight}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Center"
                                      AutomationProperties.AccessibilityView="Raw"
                                      HorizontalScrollBarVisibility="Disabled"
                                      HorizontalScrollMode="Disabled"
                                      IsDeferredScrollingEnabled="False"
                                      IsHorizontalRailEnabled="False"
                                      IsTabStop="False"
                                      IsVerticalRailEnabled="False"
                                      VerticalScrollBarVisibility="Disabled"
                                      VerticalScrollMode="Disabled"
                                      ZoomMode="Disabled" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

